<h1><%= @restaurant.name %></h1>
<h4><%= @restaurant.category %></h4>

<div>
  <%= @restaurant.address %>



</div>
<br>
<div>
<%= link_to "add a review", "#review_form", class: "btn btn-primary" %>
</div>
<br>
<h3>
Reviews:
</h3>
<div>
<% @restaurant.reviews.each do |review| %>
  <p>
    <%= review.content %>
  </p>
  <p>
    Rating: <strong><%= review.rating %></strong>
  </p>
<% end %>
</div>

<h2 id="review_form" >Review <strong><%= @restaurant.name %></strong></h2>
<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content, placeholder: "tell us about your experience here..." %>
  <%= f.input :rating, placeholder: "out of 5" %>
  <%= f.submit "submit review", class: "btn btn-primary" %>
<% end %>


